@model IEnumerable<DormWebApp.Areas.Admin.Models.Floor>

@{
    ViewBag.Title = "Floors of dorm.";
}

<h2>Floors of @ViewBag.DormName</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FloorNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfRooms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomsAvaible)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlacesAvaible)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="room">
        <td>
            @Html.DisplayFor(modelItem => item.FloorNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOfRooms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomsAvaible)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlacesAvaible)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink( linkText: "Rooms",actionName:"RoomsOfFloor",controllerName:"Room",routeValues:new { id = item.Id }, htmlAttributes:null)
        </td>
    </tr>
}

</table>
